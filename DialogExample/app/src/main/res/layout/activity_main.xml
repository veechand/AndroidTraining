<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.veechand.dialogexample.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Single Item Dialog"
        android:id="@+id/dialogButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Menu Dialog"
        android:id="@+id/menuDialogButton"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/dialogButton"
        android:layout_alignStart="@+id/dialogButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DatePicker"
        android:id="@+id/datePickerButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/menuDialogButton"
        android:layout_alignEnd="@+id/menuDialogButton"
        android:layout_marginBottom="82dp"
        android:layout_alignLeft="@+id/menuDialogButton"
        android:layout_alignStart="@+id/menuDialogButton" />
</RelativeLayout>
